{
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules/*"
	],
	"compilerOptions": {
		"baseUrl": "./src",
		"lib": [
			"es5",
			"es6",
			"es2017.object",
			"esnext.asynciterable"
		],
		"resolveJsonModule": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"listEmittedFiles": false,
		"declaration": true,
		"esModuleInterop": true,
	}
}